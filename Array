#include <iostream>
#include <windows.h>
#define N 10
using namespace std;

void displayMenu() {
	system("cls");
    cout << "**********************************" << endl;
    cout << "*         Array Operations       *" << endl;
    cout << "**********************************" << endl;
    cout << "1. Show List" << endl;
    cout << "2. Access an Element" << endl;
    cout << "3. Replace an Element" << endl;
    cout << "4. Append an Element" << endl;
    cout << "5. Insert an Element" << endl;
    cout << "6. Delete an Element" << endl;
    cout << "7. Search an Element" << endl;
    cout << "8. Sort List" << endl;
    cout << "9. Exit" << endl;
    cout << "**********************************" << endl;
    cout << "Enter your choice: ";
}

void loadingScreen() {
	system("cls");
   cout<< "Loading";
   for (int i =0; i<3;i++){
   	cout<<".";
   	Sleep(1000);
   }
}
void pressEnterToContinue() {
    cout << "Press Enter to continue...";
    cin.ignore();
    cin.get();
}
int main() {
    int arr[N] = {0};  // Initialize all elements to 0
    int k, item, r, key, temp;
    int n = 0; 
    bool found= false;
    

    while (true) {
        int choice;
        displayMenu();
        cin >> choice;
		loadingScreen();
        switch (choice) {
        	
            case 1:
            	
            	system("cls");
            	
                if (n == 0) {
                    cout << "Array is empty." << endl;
                } else {
                    cout << "Array elements: ";
                    for (int i = 0; i < n; i++) {
                        cout << arr[i] << " ";
                    }
                    cout << endl;
                }
                pressEnterToContinue();
                break;
            case 2:
            	
            	system("cls");
            	
                cout << "Enter the index to access: ";
                cin >> k;
                if (k >= 0 && k < n) {
                    cout << "Array[" << k << "] = " << arr[k] << endl;
                } else {
                    cout << "Invalid index." << endl;
                }
                pressEnterToContinue();
                break;
            case 3:
            	
            	system("cls");
            	
                cout << "Enter the index to replace: ";
                cin >> k;
                if (k >= 0 && k < n) {
                    cout << "Enter the new value for arr[" << k << "]: ";
                    cin >> r;
                    arr[k] = r;
                    cout<< "Successfully replaced with "<< r<<endl;
                } else {
                    cout << "Invalid index." << endl;
                }
                pressEnterToContinue();
                break;
            case 4:
            	
            	system("cls");
            	
                if (n < N) {
                    cout << "Enter a value to append to the array: ";
                    cin >> arr[n];
                    cout<< "Successfully Appended"<<endl;
                    n++;
                    
                } else {
                    cout << "Array is full. Cannot append more elements." << endl;
                }
                pressEnterToContinue();
                break;
            case 5:
            	
            	system("cls");
            	
                cout << "Enter the index to insert at: ";
                cin >> k;
                if (k >= 0 && k <= n && n < N) {
                    cout << "Enter the value to insert: ";
                    cin >> item;
                    for (int i = n; i > k; i--) {
                        arr[i] = arr[i - 1];
                    }
                    arr[k] = item;
                    cout<< "Successfully inserted with "<< item<<endl;
                    n++;
                } else {
                    cout << "Invalid index or array is full." << endl;
                }
                pressEnterToContinue();
                break;
            case 6:
            	
            	system("cls");
            	
                cout << "Enter the index to delete: ";
                cin >> k;
                if (k >= 0 && k < n) {
                    for (int i = k; i < n - 1; i++) {
                        arr[i] = arr[i + 1];
                    }
                    cout<< "Successfully Deleted!"<<endl;
                    n--;
                } else {
                    cout << "Invalid index." << endl;
                }
                pressEnterToContinue();
                break;
                
            case 7:
            	
            	system("cls");
            	
            	cout <<"Enter key that you want to search: ";
            	cin >> key;
            	for(int i=0; i<n; i++){
            		if(key==arr[i]){
            			cout<< "Key " << key << "is found at array["<< i <<"]"<<endl;
            			found=true;
            			break;
					}
				}
				if (!found){
					cout<< "Key was not found in the list." << endl;
				}
				pressEnterToContinue();
				break;
				
			case 8:
				
				system("cls");
				
				for (int i=0; i<n-1;i++){
					
					for (int j = i+1;j < n;j++){
						
						if (arr[i]>arr[j]){
							temp= arr[i];
							arr[i]=arr[j];
							arr[j]= temp;
						}
					}
				}
				
				cout << "New Sorted Array elements: ";
                    for (int i = 0; i < n; i++) {
                        cout << arr[i] << " ";
                    }
                    cout << endl;
                pressEnterToContinue();
                break;
                
            case 9:
            	system("cls");
                cout << "Exiting the program." << endl;
                return 0;
            default:
                cout << "Invalid choice. Please select a valid option." << endl;
        }
    }

    return 0;
}
